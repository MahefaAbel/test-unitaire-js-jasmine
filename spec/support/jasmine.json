{
  "spec_dir": "exercises",
  "spec_files": [
    "**/*[sS]pec.?(m)js",
    "**/*[sS]pec.?ts"
  ],
  "helpers": [
    "helpers/**/*.?(m)js",
    "helpers/**/*.?ts"
  ],
  "stopSpecOnExpectationFailure": false,
  "random": true,
  "reporters": [
    {
      "name": "jasmine-spec-reporter#SpecReporter",
      "options": {
        "displayStacktrace": "all"
      }
    }
  ],
}
